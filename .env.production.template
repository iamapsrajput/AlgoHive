# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://trading_user:your_db_password@postgres:5432/trading_db
DB_PASSWORD=your_secure_database_password_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://:your_redis_password@redis:6379/0
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# ZERODHA KITE API CREDENTIALS
# =============================================================================
KITE_API_KEY=your_kite_api_key_here
KITE_API_SECRET=your_kite_api_secret_here
KITE_ACCESS_TOKEN=your_kite_access_token_here

# =============================================================================
# TRADING CONFIGURATION - PRODUCTION SETTINGS
# =============================================================================
TRADING_MODE=live
LIVE_TRADING_ENABLED=true
PAPER_TRADING_ENABLED=false
AUTOMATED_TRADING_ENABLED=true
MANUAL_APPROVAL_REQUIRED=false

# =============================================================================
# RISK MANAGEMENT - PRODUCTION LIMITS
# =============================================================================
DEFAULT_POSITION_SIZE=1000
MAX_POSITION_VALUE=5000
MAX_CONCURRENT_POSITIONS=5
MAX_DAILY_LOSS=0.05
EMERGENCY_STOP_LOSS_AMOUNT=500
AUTO_STOP_LOSS=true
AUTO_STOP_LOSS_PERCENT=0.03
AUTO_TAKE_PROFIT=true
AUTO_TAKE_PROFIT_PERCENT=0.06

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
ALLOWED_HOSTS=["yourdomain.com","www.yourdomain.com"]
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
FORCE_HTTPS=true

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=your_grafana_admin_password
LOG_FILE_PATH=/app/logs/trading.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_S3_BUCKET=your-backup-s3-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
ALERT_EMAIL_TO=admin@yourdomain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# TRADING HOURS AND MARKET SETTINGS
# =============================================================================
ENFORCE_TRADING_HOURS=true
TRADING_START_TIME=09:15
TRADING_END_TIME=15:30
TRADING_TIMEZONE=Asia/Kolkata

# =============================================================================
# API RATE LIMITS
# =============================================================================
KITE_API_RATE_LIMIT=3
KITE_API_RATE_WINDOW=1
MAX_API_RETRIES=3
API_TIMEOUT=30

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=10M

# =============================================================================
# CACHE SETTINGS
# =============================================================================
CACHE_TTL=300
MARKET_DATA_CACHE_TTL=5
PORTFOLIO_CACHE_TTL=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_PAPER_TRADING=false
ENABLE_BACKTESTING=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_SOCIAL_TRADING=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
NEWS_API_KEY=your_news_api_key_here
SENTIMENT_API_KEY=your_sentiment_api_key_here

# =============================================================================
# DISASTER RECOVERY
# =============================================================================
BACKUP_RETENTION_DAYS=90
DISASTER_RECOVERY_ENABLED=true
FAILOVER_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# COMPLIANCE AND AUDIT
# =============================================================================
AUDIT_LOGGING_ENABLED=true
COMPLIANCE_MODE=strict
TRADE_LOGGING_ENABLED=true
DECISION_LOGGING_ENABLED=true

# =============================================================================
# NOTES
# =============================================================================
# 1. Change all default passwords and secrets
# 2. Use strong, unique passwords for all services
# 3. Enable SSL/TLS for all external connections
# 4. Configure proper firewall rules
# 5. Set up monitoring and alerting
# 6. Test backup and recovery procedures
# 7. Review and update security settings regularly
