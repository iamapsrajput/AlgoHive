# Application Configuration
APP_NAME=AI Trading Platform
DEBUG=False
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=["*"]

# Zerodha Kite Connect API Configuration
# Get these from https://kite.trade/connect/
KITE_API_KEY=your_kite_api_key_here
KITE_API_SECRET=your_kite_api_secret_here
KITE_ACCESS_TOKEN=your_kite_access_token_here
KITE_REQUEST_TOKEN=your_kite_request_token_here

# OpenAI Configuration
# Get API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aitrading
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Trading Configuration
MAX_RISK_PER_TRADE=0.02
MAX_DAILY_LOSS=0.05
DEFAULT_POSITION_SIZE=10000

# Market Data
MARKET_DATA_REFRESH_INTERVAL=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log

# Additional API Keys (Optional)
# For enhanced market data and news
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
NEWS_API_KEY=your_news_api_key_here
