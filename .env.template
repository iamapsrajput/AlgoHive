# Application Configuration
APP_NAME=Shagun Intelligence
DEBUG=False
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=["*"]

# Zerodha Kite Connect API Configuration
# Get these from https://kite.trade/connect/
KITE_API_KEY=your_kite_api_key_here
KITE_API_SECRET=your_kite_api_secret_here
KITE_ACCESS_TOKEN=your_kite_access_token_here
KITE_REQUEST_TOKEN=your_kite_request_token_here

# OpenAI Configuration
# Get API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Database Configuration
DATABASE_URL=sqlite:///./trading.db
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Trading Configuration
TRADING_MODE=paper
LIVE_TRADING_ENABLED=false
PAPER_TRADING_ENABLED=true
AUTOMATED_TRADING_ENABLED=false
MANUAL_APPROVAL_REQUIRED=true

# Risk Management
DEFAULT_POSITION_SIZE=1000
MAX_POSITION_SIZE=5000
MAX_DAILY_LOSS=0.05
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.05

# Market Data Sources
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
FINNHUB_API_KEY=your_finnhub_key_here
NEWS_API_KEY=your_news_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Optional API Keys
POLYGON_API_KEY=your_polygon_key_here
GLOBAL_DATAFEEDS_API_KEY=your_global_datafeeds_key_here
EODHD_API_KEY=your_eodhd_key_here
MARKETAUX_API_KEY=your_marketaux_key_here
GROK_API_KEY=your_grok_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log

# Environment
ENVIRONMENT=development
